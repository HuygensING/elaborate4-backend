<assembly
  xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>server</id>
  <formats>
    <format>zip</format>
    <!-- <format>tar.bz2</format> -->
  </formats>
  <fileSets>
    <fileSet>
      <directory>target/generated-resources/appassembler/jsw/elab4-backend/</directory>
      <outputDirectory />
      <fileMode>0755</fileMode>
      <includes>
        <include>bin/**</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target/generated-resources/appassembler/jsw/elab4-backend/</directory>
      <outputDirectory />
      <excludes>
        <exclude>bin/**</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>instances/elab4/</directory>
      <outputDirectory />
      <includes>
        <include>**</include>
      </includes>
    </fileSet>
    <fileSet>
      <includes>
        <include>README*</include>
        <include>LICENSE*</include>
        <include>NOTICE*</include>
        <include>version.txt</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>